@model SGE.Models.Notas

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Notas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MateriasId" class="control-label"></label>
                <select asp-for="MateriasId" class ="form-control" asp-items="ViewBag.MateriasId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AlunosId" class="control-label"></label>
                <select asp-for="AlunosId" class ="form-control" asp-items="ViewBag.AlunosId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EtapasId" class="control-label"></label>
                <select asp-for="EtapasId" class ="form-control" asp-items="ViewBag.EtapasId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
